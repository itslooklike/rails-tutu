<p id="notice"><%= notice %></p>

<h1>Routes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
      <th>Stations List</th>
    </tr>
  </thead>

  <tbody>
    <% @routes.each do |route| %>
      <tr>
        <td><%= route.name %></td>
        <td><%= link_to 'Show', route %></td>
        <td><%= link_to 'Edit', edit_route_path(route) %></td>
        <td><%= link_to 'Destroy', route, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= (route.railway_stations.map {|rs| rs.title}).join(' -> ') if route.railway_stations %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Main Page', root_path %>
<%= link_to 'New Route', new_route_path %>

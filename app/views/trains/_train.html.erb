<tr>
  <td><%= train.number %></td>
  <td><%= train.railway_station.title if train.railway_station %></td>
  <td><%= train.route.name if train.route %></td>
  <td><%= train.tikets.size if train.tikets %></td>
  <td><%= train.wagons.size if train.wagons %></td>
  <td><%= link_to 'Show', train %></td>
  <td><%= link_to 'Edit', edit_train_path(train) %></td>
  <td><%= link_to 'Destroy', train, method: :delete, data: { confirm: 'Are you sure?' } %></td>
</tr>
